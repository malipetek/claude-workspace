{
  "$schema": "https://raw.githubusercontent.com/malipetek/ai-projects/main/schemas/ai-workspace.schema.json",
  "_comment": "Place this file as .ai-workspace.json in your project root",

  "project": {
    "name": "DeepTurkishNews3",
    "description": "Deep learning news aggregator"
  },

  "layout": {
    "claude_position": "left",
    "claude_width_percent": 50
  },

  "processes": [
    {
      "name": "frontend",
      "command": "npm run dev",
      "cwd": "./frontend",
      "color": "blue"
    },
    {
      "name": "backend",
      "command": "cargo watch -x run",
      "cwd": "./backend",
      "color": "green"
    },
    {
      "name": "types",
      "command": "npm run types:watch",
      "cwd": ".",
      "color": "yellow"
    }
  ],

  "hooks": {
    "before_start": "docker compose up -d postgres redis",
    "after_stop": "docker compose down"
  }
}
